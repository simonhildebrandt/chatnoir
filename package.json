{
  "name": "my-webapp-starter",
  "version": "1.0.0",
  "description": "Basic Browserify/Babel/React stack",
  "main": "index.js",
  "author": "Simon Hildebrandt <simonhildebrandt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "live-server --port=9000 --entry-file=index.html dev/",
    "build": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js",
    "watch": "yarn esbuild src/index.jsx --bundle --outfile=dev/index.js --watch",
    "build_prod": "yarn esbuild src/index.jsx --bundle --outfile=public/index.js",
    "deploy_functions": "firebase deploy --only functions",
    "deploy_hosting": "yarn build_prod && yarn firebase deploy --only hosting",
    "deploy_all": "yarn deploy_functions && yarn deploy_hosting",
    "setup_api": "firebase functions:config:set api.conf=\"something\"",
    "emulator": "firebase emulators:start --export-on-exit=./firebase_data --import=./firebase_data",
    "setup_emulator": "cp -R default_data firebase_data"
  },
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.14.5",
    "@chakra-ui/icons": "^1.0.16",
    "@chakra-ui/react": "^1.6.10",
    "@date-io/luxon": "^2.11.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "axios": "^0.24.0",
    "babelify": "^10.0.0",
    "browserify": "^16.5.1",
    "esbuild": "^0.13.12",
    "firebase": "^9.2.0",
    "firebase-tools": "^9.21.0",
    "framer-motion": "^4",
    "live-server": "^1.2.1",
    "navigo": "^8.11.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^7.1.0",
    "react-textarea-autosize": "^8.3.3",
    "throttle-debounce": "^3.0.1",
    "watchify": "^3.11.1"
  }
}
